<%
  form_url = update_checkout_path(@order.state)
  form_html = { id: "checkout_form_#{@order.state}" }
%>

<%= form_for @order, url: form_url, html: form_html do |form| %>
  <% if @order.state == "address" || !@order.email? %>
    <div class="text-input">
      <%= label_tag 'order_email', 'Customer E-Mail:' %>
      <%= text_field_tag 'order[email]',
        @order.email,
        type: 'email',
        required: true,
        placeholder: 'name@example.com'
      %>
    </div>
  <% end %>

  <%= render "spree/checkout/steps/#{@order.state}_step", form: form %>
<% end %>
